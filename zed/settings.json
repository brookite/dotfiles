// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },
  "minimap": {
    "show": "never"
  },
  "buffer_font_fallbacks": [
    "Fira Code Retina",
    "JetBrains Mono",
    "Hack",
    "Menlo",
    "Consolas",
    "Courier New",
    "monospace"
  ],
  "file_types": {
    "php": ["*.php"]
  },
  "auto_indent_on_paste": true,
  "linked_edits": true,
  "wrap_guides": [100],
  "soft_wrap": "editor_width",
  "diagnostics": {
    "inline": {
      "enabled": false
    }
  },
  "prettier": {
    "allowed": true
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 500
    }
  },
  "buffer_font_family": "Fira Code Retina",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "base_keymap": "VSCode",
  "ui_font_size": 16,
  "buffer_font_size": 16.0,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Cursor Dark"
  },
  "wsl_connections": [
    {
      "distro_name": "Debian",
      "user": null,
      "projects": []
    }
  ]
}
